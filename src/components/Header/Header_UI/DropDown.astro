---
import Icons from "../../UI/Icons.astro";

interface Props {
    name: string;

    items: {
        text: string;
        icon?: string;
    }[];
}

const { name, items } = Astro.props;
---

<!-- DROPDOWN 1 -->
<li class="relative group z-10">
    <input type="checkbox" id={name} class="peer/d1 hidden" />
    <label for={name} class="py-2 cursor-pointer flex items-center gap-2"
        >{name}
        <span class="md:hidden">
            <Icons name="icon-arrow-down" width={10} height={"auto"} />
        </span></label
    >
    <span class="hidden py-2 cursor-pointer items-center gap-2"
        >{name}
        <Icons name="icon-arrow-up" width={10} height={"auto"} /></span
    >

    <!-- SubmenÃº -->
    <ul class="hidden peer-checked/d1:block">
        {
            items.map((item) => (
                <li class="flex py-2">
                    <a
                        href="#"
                        class="leading-0 flex items-center px-10 py-1 gap-2"
                    >
                        <Icons
                            name={item.icon ?? ""}
                            width={20}
                            height={"auto"}
                        />
                        <span> {item.text} </span>
                    </a>
                </li>
            ))
        }
    </ul>
</li>
