---
interface Props {
    text: string;
    href?: string;
    class?: string;
}

const { text, href, class: className } = Astro.props;
---

<a
    href={href}
    class:list={[
        "border border-black rounded-xl px-4 py-1.5 font-semibold inline-block hover:border-black hover:text-black hover:border-2 ",
        className,
    ]}
>
    {text}
</a>
