---
interface Props {
    text: string;
    href?: string;
    class?: string;
}

const { text, href, class: className } = Astro.props;
---

<a
    href={href}
    class:list={[
        "border border-black rounded-2xl lg:rounded-xl px-5 lg:px-5 py-3 lg:py-1.5 font-semibold inline-block hover:border-black hover:text-black hover:border-2 transition-colors ease-in-out duration-300 lg:cursor-pointer",
        className,
    ]}
>
    {text}
</a>
