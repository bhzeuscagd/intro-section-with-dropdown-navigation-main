---
interface Props {
    text: string;
    href?: string;
    class?: string;
}

const { text, href, class: className } = Astro.props;

const Tag = href ? "a" : "button";
---

<Tag
    href={href}
    class:list={[
        "border border-black rounded-2xl lg:rounded-xl px-5 py-3 font-semibold inline-block hover:border-black hover:text-black hover:border-2 transition-colors ease-in-out duration-300 cursor-pointer",
        className,
    ]}
>
    {text}
</Tag>
