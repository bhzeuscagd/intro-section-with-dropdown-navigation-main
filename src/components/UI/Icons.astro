---
/**
 * @component Icons
 * @description
 * [EN] Reusable SVG component that loads icons from a single sprite sheet (`/sprite.svg`).
 * This approach reduces HTTP requests and improves performance compared to inline SVGs or individual strings.
 *
 * [ES] Componente SVG reutilizable que carga iconos desde una hoja de sprites única (`/sprite.svg`).
 * Este enfoque reduce las peticiones HTTP y mejora el rendimiento comparado con SVGs en línea o archivos individuales.
 */
interface Props {
    name: string;
    class?: string;
    width?: string | number;
    height?: string | number;
}

const { name, class: className, width, height } = Astro.props;

// [EN] Map of icon names to their specific viewBox dimensions.
// Needed because icons in a sprite stack might have different aspect ratios.
// [ES] Mapa de nombres de iconos a sus dimensiones específicas de viewBox.
// Necesario porque los iconos en un sprite stack pueden tener diferentes relaciones de aspecto.
const viewBoxMap: Record<string, string> = {
    "client-audiophile": "0 0 73 36",
    "client-databiz": "0 0 114 20",
    "client-maker": "0 0 83 24",
    "client-meet": "0 0 90 20",
    "icon-arrow-down": "0 0 10 6",
    "icon-arrow-up": "0 0 10 6",
    "icon-calendar": "0 0 16 16",
    "icon-close-menu": "0 0 26 26",
    "icon-menu": "0 0 32 18",
    "icon-planning": "0 0 16 16",
    "icon-reminders": "0 0 13 17",
    "icon-todo": "0 0 14 16",
    logo: "0 0 84 27",
};

const viewBox = viewBoxMap[name] || "0 0 24 24";
---

<!-- 
    [EN] SVG Sprite Usage:
    - aria-hidden="true": Hides the icon from screen readers (purely decorative). Use specific aria-labels on parents if meaning is needed.
    - use href: References the symbol ID in the external sprite file.
    
    [ES] Uso de SVG Sprite:
    - aria-hidden="true": Oculta el icono a lectores de pantalla (puramente decorativo). Usa aria-labels específicos en padres si se requiere significado.
    - use href: Referencia el ID del símbolo en el archivo sprite externo.
-->
<svg
    viewBox={viewBox}
    width={width}
    height={height}
    class={`fill-current ${className}`}
    aria-hidden="true"
>
    <use href={`/sprite.svg#${name}`}></use>
</svg>
